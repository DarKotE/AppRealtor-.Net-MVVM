<Window x:Class="Esoft.Views.ComplexAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Esoft" Height="613.5" Width="500.417"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource WindowsStyle}" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="16"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>
            <RowDefinition Height="62"/>


            <RowDefinition Height="16"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>
        <Label Content="Добавить комплекс" Grid.Row="1"  Grid.ColumnSpan="2" 
               Style="{DynamicResource LabelTitle}" Grid.Column="1" Margin="0,0" />
        <Label Grid.Row="3"   
               Style="{DynamicResource LabelStyle}" Grid.Column="1" Margin="16,0.2,10.2,0" Height="Auto" RenderTransformOrigin="0.811,0.575"  >
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="Название жилищного комплекса" TextAlignment="Center"/>
            </Label.Content>
        </Label>
        <Label Grid.Row="4"   
            Style="{DynamicResource LabelStyle}" Grid.Column="1" Margin="16,0,10.2,0.2" Height="Auto" RenderTransformOrigin="0.811,0.575"  >
            <AccessText TextWrapping="Wrap" Text="Коэффициент добавочной стоимости на строительство&#xD;&#xA;" TextAlignment="Center"/>
        </Label>
        <Label Grid.Row="4"   
            Style="{DynamicResource LabelStyle}" Grid.Column="1" Margin="16,63,10.2,0.4" Height="Auto" RenderTransformOrigin="0.811,0.575" Grid.RowSpan="2"  >
            <AccessText TextWrapping="Wrap" Text="Статус " TextAlignment="Center"/>
        </Label>
        <Label Grid.Row="5"   
            Style="{DynamicResource LabelStyle}" Grid.Column="1" Margin="16,62.8,10.2,62.2" Height="Auto" RenderTransformOrigin="0.811,0.575" Grid.RowSpan="3"  >
            <AccessText TextWrapping="Wrap" Text="Затраты на строительство" TextAlignment="Center"/>
        </Label>
        <Label Grid.Row="7"   
            Style="{DynamicResource LabelStyle}" Grid.Column="1" Margin="16,0.2,10.2,61.6" Height="Auto" RenderTransformOrigin="0.811,0.575" Grid.RowSpan="2"  >
            <AccessText TextWrapping="Wrap" Text="Город" TextAlignment="Center"/>
        </Label>
        <TextBox x:Name="tbName" Grid.Column="2" Grid.Row="3"
                 Text="{Binding Path=CurrentComplex.NameHousingComplex}"
                 Style="{DynamicResource TbStyle}"/>
        <TextBox x:Name="tbComplexc" Grid.Column="2" Grid.Row="4"
                 Text="{Binding Path=CurrentComplex.AddedValue}" PreviewTextInput="NumberValidationTextBox"
                 Style="{DynamicResource TbStyle}"/>
        <ComboBox x:Name="cbStatus" 
                  ItemsSource="{Binding StatusList}"
                  SelectedItem="{Binding SelectedStatus, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Margin="9.8,16.8,10.4,16.4" Grid.Row="5"/>
        <TextBox x:Name="tbCost" Grid.Column="2" Grid.Row="6" PreviewTextInput="NumberValidationTextBox"
                 Text="{Binding Path=CurrentComplex.BuildingCost}"
                 Style="{DynamicResource TbStyle}"/>
        <TextBox x:Name="tbCity" Grid.Column="2" Grid.Row="7"
                 Text="{Binding Path=CurrentComplex.City}"
                 Style="{DynamicResource TbStyle}"/>
        <Button x:Name="btnBack" Content="Назад" Grid.Column="1" Grid.Row="9"
                Style="{DynamicResource BtnStyle}" Background="#ffd800" Click="btnBack_Click"/>
        <Button x:Name="btnSaveChanges" Content="Сохранить изменения" Grid.Column="2" 
                Command="{Binding Path=AddCommand}" 
                Grid.Row="9" Style="{DynamicResource BtnStyle}" Click="btnSaveChanges_Click" Background="#ffd800"/>


    </Grid>

</Window>
